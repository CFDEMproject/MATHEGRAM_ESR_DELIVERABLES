FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

// Fluid is not participating in the radiative heat exchange 
// and temperature remains constant

internalField   uniform 100; 

boundaryField
{
    atmosphere
    {
        type            fixedValue;
        value           uniform 100;
    }

}

