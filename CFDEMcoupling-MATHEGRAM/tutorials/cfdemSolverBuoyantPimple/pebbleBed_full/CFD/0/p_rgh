FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

// dummy pressure value, vacuum conditions
internalField   uniform 1e5;

boundaryField
{
   "(hotWall|coolWall|insulation)"  
    {
        type            fixedFluxPressure;
    }
}

