FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

// vacuum conditions; fluid temperature not important! 
internalField   uniform 300; 

boundaryField
{
    hotWall          
    {
        type            fixedValue;
        value           uniform 300; 
    }
    "(coolWall|insulation)"          
    {
        type            zeroGradient;
    }
}

